<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SscPatrolLogger.HistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SscPatrolLogger">

    <VerticalStackLayout Padding="10"
                         Spacing="12">

        <!-- Search bar -->
        <SearchBar x:Name="SearchBar"
                   Placeholder="Search by location..."
                   TextChanged="OnFilterChanged" />

        <!-- Filters -->
        <Grid ColumnDefinitions="*,*"
              ColumnSpacing="10">
            <VerticalStackLayout Grid.Column="0">
                <Label Text="Shift"
                       FontAttributes="Bold" />
                <Picker x:Name="ShiftFilter"
                        SelectedIndexChanged="OnFilterChanged" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1">
                <Label Text="Date"
                       FontAttributes="Bold" />
                <DatePicker x:Name="DateFilter"
                            DateSelected="OnFilterChanged" />
            </VerticalStackLayout>
        </Grid>

        <!-- History list -->
        <CollectionView x:Name="HistoryCollectionView"
                        IsGrouped="True"
                        ItemsSource="{Binding Groups}">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Label Text="{Binding Date}"
                           FontAttributes="Bold"
                           FontSize="18"
                           Margin="0,10,0,4" />
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Line}"
                           FontSize="16"
                           Margin="10,2" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
